@using ToDoApp.Pages;
@inherits LayoutComponentBase

<PageTitle>ToDoApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div>
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            </div>
            <div class="m-3">
                <button type="button" @onclick="() => showLoginPrompt = true">Login</button>
            </div>
            <div class="m-3">
                <button type="button" @onclick="() => showRegisterPrompt = true">Register</button>
            </div>
        </div>

        @if (showLoginPrompt)
        {
            <LoginComponent />
        }
        @if (showRegisterPrompt)
        {
            <RegisterComponent />
        }

        <article class="content px-4">
            @Body
        </article>
        <div>
            <RadzenDialog />
        </div>
    </main>
</div>

@code {
    bool showLoginPrompt;
    bool showRegisterPrompt;
}
